{
    "manifest_version": 3,
    "name": "Quick YouTube Search by Selected Text",
    "version": "1.0",
    "description": "Search YouTube based on selected text",
    "permissions": ["contextMenus", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "128": "icon-128.png"
    }
}
  